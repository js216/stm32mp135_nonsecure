CONFIG_RANDOM_TRUST_CPU=n
CONFIG_RANDOM_TRUST_BOOTLOADER=n
CONFIG_TCG_TPM=n
CONFIG_HW_RANDOM=n

# remove PSCI, SCMI, and OP-TEE
