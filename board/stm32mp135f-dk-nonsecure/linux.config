CONFIG_ARM_SCMI_POWER_DOMAIN=n
CONFIG_SENSORS_ARM_SCMI=n
CONFIG_REGULATOR_ARM_SCMI=n
CONFIG_RESET_SCMI=n
CONFIG_TRUSTED_FOUNDATIONS=n
CONFIG_ARM_SMCC_SOC_ID=n
CONFIG_ARM_SMC_WATCHDOG=n
CONFIG_CPU_FREQ=n
CONFIG_CPU_IDLE=n
