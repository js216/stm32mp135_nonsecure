# kernel boot command line
CONFIG_CMDLINE="root=/dev/mmcblk0p4 rootwait"

# add things
CONFIG_DRM_FBDEV_EMULATION=y

# remove things
CONFIG_CAN=n
CONFIG_BT=n
CONFIG_CFG80211=n
CONFIG_VIRTIO_NET=n
CONFIG_USB_NET_DRIVERS=n
CONFIG_WLAN=n
CONFIG_RFKILL=n
CONFIG_WIRELESS=n
CONFIG_SOUND=n
CONFIG_REMOTEPROC=n
